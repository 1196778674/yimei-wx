<view class="container">
  <view class="tui-searchbox">
    <view class="tui-search-input" bindtap="search">
      <icon type="search" size='13' color='#999'></icon>
      <text class="tui-search-text">搜索商品</text>
    </view>
  </view>

  <scroll-view scroll-y scroll-with-animation class="tab-view" scroll-top="{{scrollTop}}" style="height:{{menuHeight}}px">
    <view wx:for="{{tabbar}}" wx:key="{{index}}" class="tab-bar-item {{currentTab==index ? 'active' : ''}}" data-current="{{index}}" catchtap="swichNav">
      <text>{{item}}</text>
    </view>
  </scroll-view>
  <view class="right-box">
    <!--内容部分 start 自定义可删除-->
    <block wx:for="{{tabbar}}" wx:key="{{index}}">
      <view class="page-view" hidden="{{currentTab!==index}}">
        <swiper indicator-dots autoplay circular interval="5000" duration="150" class="swiper">
          <swiper-item wx:if="{{index%2===0}}" catchtap="detail">
            <image src="../../../static/images/mall/banner/1.jpeg" class="slide-image" />
          </swiper-item>
          <swiper-item catchtap="detail">
            <image src="../../../static/images/mall/banner/2.jpeg" class="slide-image" />
          </swiper-item>
          <swiper-item catchtap="detail">
            <image src="../../../static/images/mall/banner/3.jpeg" class="slide-image" />
          </swiper-item>
        </swiper>
        <view class="class-box">
          <view class="class-item">
            <view class="class-name">{{item}}</view>
            <view class="g-container">
              <view class="g-box" catchtap="productList" data-key="精品奶砖">
                <image src="../../../static/images/product/11.jpg" class="g-image" />
                <view class="g-title">精品奶砖</view>
              </view>
              <view class="g-box" catchtap="productList" data-key="狗粮">
                <image src="../../../static/images/product/22.jpg" class="g-image" />
                <view class="g-title">狗粮</view>
              </view>
              <view class="g-box" catchtap="productList" data-key="金冠猫粮" wx:if="{{index%2===0}}">
                <image src="../../../static/images/product/44.jpg" class="g-image" />
                <view class="g-title">金冠猫粮</view>
              </view>
            </view>
          </view>

          <view class="class-item">
            <view class="class-name">相关推荐</view>
            <view class="g-container">
              <view class="g-box" catchtap="productList" data-key="狗粮">
                <image src="../../../static/images/product/11.jpg" class="g-image" />
                <view class="g-title">狗粮</view>
              </view>
              <view class="g-box" catchtap="productList" data-key="猫粮">
                <image src="../../../static/images/product/22.jpg" class="g-image" />
                <view class="g-title">猫粮</view>
              </view>
              <view class="g-box" catchtap="productList" data-key="金毛鼠粮">
                <image src="../../../static/images/product/33.jpg" class="g-image" />
                <view class="g-title">金毛鼠粮</view>
              </view>
            </view>
          </view>

        </view>
      </view>

    </block>
    <!--内容部分 end 自定义可删除-->
  </view>
</view>