<view class="container">
  <!--tabbar-->
  <view class="tui-tabbar">
    <block wx:for="{{tabbar}}" wx:key="{{index}}">
      <view class="tui-tabbar-item {{current==index?'tui-item-active':''}}" data-index="{{index}}" bindtap="tabbarSwitch">
        <tui-icon name="{{current==index?item.icon+'-fill':item.icon}}" color="{{current==index?'burlywood':'#666'}}" size="{{item.size}}" class="{{index==0?'tui-ptop-4':''}}"></tui-icon>
        <view class="tui-scale">{{item.text}}</view>
      </view>
    </block>
  </view>
  <!--tabbar-->

  <!-- serach -->
  <view class="tui-header" style="background:rgba(255,255,255,1)">
    <!-- <view class="tui-category" hover-class="opcity" hover-stay-time="150" bindtap="classify">
      <tui-icon name="manage-fill" color="#999" size="22" tui-icon-class="tui-icon-category"></tui-icon>
      <view class="tui-category-scale">名宠</view>
    </view> -->
    <view class="tui-rolling-search">
      <icon type="search" size='13' color='#999'></icon>
      <swiper vertical="{{true}}" autoplay="{{true}}" circular="{{true}}" interval="8000" class="tui-swiper">
        <swiper-item wx:for="{{hotSearch}}" wx:key="{{index}}" class="tui-swiper-item" bindtap="search">
          <view class="tui-hot-item">{{item}}</view>
        </swiper-item>
      </swiper>
    </view>
  </view>
  <!-- search -->

  <!-- banner -->
  <view class="tui-header-banner">
    <view class="tui-banner-bg" style="height: {{height}}">
      <view class="tui-banner-box">
        <swiper next-margin="40rpx" indicator-dots="{{false}}" autoplay="{{false}}" interval="5000" duration="150" class="tui-banner-swiper" circular="{{true}}" style="height: {{height}}">
          <swiper-item wx:for="{{banner}}" wx:key="{{index}}" catchtap="detail">
            <image src="{{item}}" class="tui-slide-image" mode="scaleToFill" />
          </swiper-item>
        </swiper>
      </view>
    </view>
  </view>
  <!-- banner -->

  <!-- 最佳top排行 -->
  <view class="tui-product-box tui-pb-20 tui-bg-white">
    <view class="tui-group-name" bindtap="more">
      <text>最佳top排行</text>
      <tui-icon name="arrowright" size="20" color="#555"></tui-icon>
      <view class="small-title">
        最佳排行，里面有你的小可爱吗
      </view>
    </view>
    <view class="tui-new-box">
      <swiper next-margin="20rpx" indicator-dots="{{false}}" display-multiple-items="2" autoplay="{{false}}" interval="5000" duration="150" class="tui-banner-swiper1" circular="{{true}}">
        <swiper-item class="top-item"  wx:for="{{newProduct}}" wx:key="{{index}}" bindtap="detail">
          <view class="tui-new-item {{index!=0 && index!=1 ?'tui-new-mtop':''}}">
            <!-- <image src="../../../static/images/mall/new/{{item.type==1?'new':'discount'}}.png" class="tui-new-label" wx:if="{{item.isLabel}}"></image> -->
            <view class="tui-title-box">
              <view class="tui-new-title">{{item.name}}</view>
              <view class="tui-new-price">
                <text class="tui-new-present">￥{{item.present}}</text>
                <text class="tui-new-original"></text>
              </view>
            </view>
            <image src="{{item.pic}}" class="tui-new-img"></image>
          </view>
        </swiper-item>
      </swiper>
    </view>
  </view>
  <!-- 最佳top排行 -->

  <!-- 热门品牌 -->
  <view class="tui-product-box tui-pb-20 tui-bg-white top0">
    <view class="tui-group-name" style="padding-top: 0rpx" bindtap="more">
      <text>热门品牌</text>
      <tui-icon name="arrowright" size="20" color="#555"></tui-icon>
      <view class="small-title">
        延续双11优惠，波兰小众内衣品牌
      </view>
    </view>
    <view class="tui-new-box">
      <image class="pinpai" src="http://img.o2bra.com.cn/assets/uploads/notices/50aeb3496c4d7e96c344f4a4bd184c71.jpg"></image>
    </view>
  </view>
  <!-- 热门品牌 -->

  <!-- 热门推荐 -->
  <view class="tui-product-box">
    <view class="tui-product-list">
      <view class="tui-product-container">
        <block wx:for="{{productList}}" wx:key="{{index}}" wx:if="{{(index+1)%2!=0}}">
          <template is="productItem" data="{{item,index:index}}" />
        </block>
      </view>
      <view class="tui-product-container">
        <block wx:for="{{productList}}" wx:key="{{index}}" wx:if="{{(index+1)%2==0}}">
          <template is="productItem" data="{{item,index:index}}" />
        </block>
      </view>
    </view>
  </view>
  <!-- 热门推荐 -->
  <!--模板-->
  <template name="productItem">
    <!--商品列表-->
    <view class="tui-pro-item" hover-class="hover" hover-start-time="150" bindtap="detail">
      <image src="{{item.img}}" class="tui-pro-img" mode="widthFix" />
      <view class="tui-pro-content">
        <view class="tui-pro-tit">{{item.name}}</view>
        <view>
          <view class="tui-pro-price">
            <text class="tui-sale-price">￥{{item.sale}}</text>
          </view>
        </view>
      </view>
    </view>
    <!--商品列表-->
  </template>

  <!--加载loadding-->
  <tui-loadmore visible="{{loadding}}" index="3" type="red"></tui-loadmore>
  <!-- <tui-nomore visible="{{!pullUpOn}}"></tui-nomore> -->
  <!--加载loadding-->
  <view class="tui-safearea-bottom"></view>
</view>